{% extends 'base.html.twig' %}

{% block title %}Accueil | {{ parent() }}{% endblock %}

{% block body %}
    <section class="h-[calc(100vh-64px)] bg-cover relative flex flex-col justify-center items-center"
             style="background-image: url('{{ asset('uploads/app/background_entrance.jpeg') }}')">

        <h1 class="text-6xl sm:text-8xl uppercase text-white text-shadow font-bold">Snowtricks</h1>
        <div class="border border-gray-500 w-52 mx-auto my-5"></div>
        <p class="text-2xl sm:text-3xl text-gray-900 text-shadow">Blog Communautaire</p>

        <a href="#tricks"
           id="click"
           class="absolute bottom-8 left-1/2 transform -translate-x-1/2 h-12 w-12 flex items-center justify-center bg-indigo-600 rounded-full shadow-md">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M16 17l-4 4m0 0l-4-4m4 4V3"></path>
            </svg>
        </a>
    </section>
    <section id="tricks" class="min-h-full pt-16">
        <section class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
            <h1 class="text-center text-3xl font-extrabold text-gray-900">Les Tricks</h1>

            <p class="text-gray-500 text-center max-w-2xl mx-auto py-6">Retrouver les plus belles figures de snowboard,
                leur
                détails ainsi que leur démonstration. Une figure manque ? Ajoutez-la!</p>

            <div class="flex justify-center">
                {% if app.user %}
                    <a href="{{ path('trick_new') }}"
                       class="mx-auto mt-4 mb-10 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Ajouter
                        un Trick</a>
                {% else %}
                    <a href="{{ path('app_register') }}"
                       class="mx-auto mt-4 mb-10 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Inscription</a>
                {% endif %}
            </div>

            {% include('trick/includes/_tricks.html.twig') %}

            <div class="flex justify-center">
                <a href="#" id="loadMore"
                   class="mx-auto mt-4 mb-10 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Charger
                    plus</a>
            </div>
        </section>
    </section>
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('smooth') }}
        {{ encore_entry_script_tags('load-more') }}
    {% endblock %}
{% endblock %}
