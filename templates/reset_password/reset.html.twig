
{% extends 'base.html.twig' %}

{% block title %}Nouveau mot de passe | {{ parent() }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <img class="mx-auto h-24 w-auto" src="{{ asset('favicon.svg') }}"
                     alt="Workflow">
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Réinitialisez votre mot de passe
                </h2>
            </div>

            {{ form_start(resetForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md shadow-sm -space-y-px">
                <div class="rounded-md shadow-sm -space-y-px">
                    {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(resetForm.plainPassword.first, {
                        'attr': {
                            'class': 'appearance-none rounded-t-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                            'placeholder': 'Nouveau mot de passe'
                        }
                    }) }}
                </div>
                <div class="rounded-md shadow-sm -space-y-px">
                    {{ form_label(resetForm.plainPassword.second, 'Confirmer mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                    {{ form_widget(resetForm.plainPassword.second, {
                        'attr': {
                            'class': 'appearance-none rounded-b-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                            'placeholder': 'Confirmer mot de passe'
                        }
                    }) }}
                </div>
            </div>

            <div>
                <button type="submit"
                        class="group mt-8 relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Créer mot de passe
                </button>
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>

{% endblock %}


