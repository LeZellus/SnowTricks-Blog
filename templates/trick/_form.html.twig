<div class="md:grid md:grid-cols-1 md:gap-6">
    <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Informations générales</h3>
            <p class="mt-1 text-sm text-gray-600">
                Remplissez les informations nécessaires
            </p>
        </div>
    </div>
    <div class="mt-5 md:mt-0">
        {{ form_start(form) }}
        <div class="shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 bg-white sm:p-6">
                <div class="grid grid-cols-6 gap-6">
                    <div class="col-span-6 sm:col-span-3">
                        {{ form_label(form.name, "Nom du Trick", {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    </div>

                    <div class="col-span-6 sm:col-span-3">
                        {{ form_label(form.description, "Description", {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'}}) }}
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                        {{ form_label(form.videos, "Vidéos", {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_errors(form.videos) }}

                        <ul class="videos" data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
                            {% for video in form.videos %}
                                <li>
                                    {{ form_label(video) }}
                                    {{ form_widget(video) }}
                                </li>
                            {% endfor %}
                        </ul>
                        <button type="button" class="add_video" data-collection-holder-class="videos">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="col-span-6 sm:col-span-3">
                        {{ form_label(form.thumbs, "Images", {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_errors(form.thumbs) }}

                        <ul class="images" data-prototype="{{ form_widget(form.thumbs.vars.prototype)|e('html_attr') }}">
                            {% for thumb in form.thumbs %}
                                <li>
                                    {{ form_label(thumb) }}
                                    {{ form_widget(thumb) }}
                                </li>
                            {% endfor %}
                        </ul>
                        <button type="button" class="add_image" data-collection-holder-class="images">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </button>
                    </div>
                </div>


            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <a class="inline-flex justify-center py-2 px-4 border border-indigo-600 shadow-sm text-sm font-medium rounded-md text-indigo-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                   href="{{ path('trick_index') }}">Retour</a>

                <button type="submit"
                        class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>











