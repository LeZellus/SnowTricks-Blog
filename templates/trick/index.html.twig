{% extends 'base.html.twig' %}

{% block title %}Trick index{% endblock %}

{% block body %}

    <section class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 min-h-[calc(100vh-8rem)]">
        <h1 class="pt-6 text-center text-3xl font-extrabold text-gray-900">Les Tricks</h1>

        <p class="text-gray-500 text-center max-w-2xl mx-auto py-6">Retrouver les plus belles figures de snowboard, leur
            détails ainsi que leur démonstration. Une figure manque ? Ajoutez-la!</p>

        <div class="flex justify-center">
            {% if app.user %}
                <a href="{{ path('trick_new') }}"
                   class="mx-auto mt-4 mb-10 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Ajouter
                    un Trick</a>
            {% else %}
                <a href="{{ path('app_register') }}"
                   class="mx-auto mt-4 mb-10 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Inscription</a>
            {% endif %}
        </div>

        {% include('trick/includes/_tricks.html.twig') %}
    </section>

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('smooth') }}
        {{ encore_entry_script_tags('load-more') }}
    {% endblock %}
{% endblock %}
